<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>redirect</welcome-file>
    </welcome-file-list>

    <servlet>
        <servlet-name>RedirectServlet</servlet-name>
        <servlet-class>cs4280.servlet.RedirectServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>cs4280.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ValidateIdentityServlet</servlet-name>
        <servlet-class>cs4280.servlet.ValidateIdentityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MainServlet</servlet-name>
        <servlet-class>cs4280.servlet.MainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>cs4280.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ProfileServlet</servlet-name>
        <servlet-class>cs4280.servlet.ProfileServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GameServlet</servlet-name>
        <servlet-class>cs4280.servlet.GameServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecordServlet</servlet-name>
        <servlet-class>cs4280.servlet.RecordServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RankingServlet</servlet-name>
        <servlet-class>cs4280.servlet.RankingServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TrafficServlet</servlet-name>
        <servlet-class>cs4280.servlet.TrafficServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RedirectServlet</servlet-name>
        <url-pattern>/redirect</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ValidateIdentityServlet</servlet-name>
        <url-pattern>/validate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MainServlet</servlet-name>
        <url-pattern>/main</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ProfileServlet</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GameServlet</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecordServlet</servlet-name>
        <url-pattern>/record</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RankingServlet</servlet-name>
        <url-pattern>/record/rank</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TrafficServlet</servlet-name>
        <url-pattern>/record/traffic</url-pattern>
    </servlet-mapping>

</web-app>